        </Border>
        <Border BorderThickness="0" CornerRadius="0,0,6,6" VerticalAlignment="Bottom" Height="47" RenderTransformOrigin="0.516,7.083" Margin="0,403,0,0" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Background="#FFF3F9F5"/>

